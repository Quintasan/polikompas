.row.justify-content-center
  .col
    = form_with(model: user, url: signup_url, local: true) do |f|
      - if user.errors.any?
        %ul
          - user.errors.full_messages.each do |message|
            %li= message
      .inputs
        .mdc-text-field.mt-3
          = f.text_field :email, class: "mdc-text-field__input"
          .mdc-line-ripple
          = f.label :email, class: "mdc-floating-label"
        .mdc-text-field.mt-3
          = f.password_field :password, class: "mdc-text-field__input"
          .mdc-line-ripple
          = f.label :password, class: "mdc-floating-label"
        .mdc-text-field.mt-3
          = f.password_field :password_confirmation, class: "mdc-text-field__input"
          .mdc-line-ripple
          = f.label :password_confirmation, class: "mdc-floating-label"
      = f.submit class: "mdc-button mdc-button--raised mt-3"
